apiVersion: machine.openshift.io/v1beta1
kind: MachineSet
metadata:
  labels:
    machine.openshift.io/cluster-api-cluster: {{ infraID }}
  name: {{ infraID }}-{{ item.1 }}-{{ item.0 }}-{{ suffix }} 
spec:
  replicas: 1
  selector:
    matchLabels:
      machine.openshift.io/cluster-api-cluster: {{ infraID }}
      machine.openshift.io/cluster-api-machineset: {{ infraID }}-{{ item.1 }}-{{ item.0 }}-{{ suffix }} 
  template:
    metadata:
      labels:
        machine.openshift.io/cluster-api-cluster: {{ infraID }}
        machine.openshift.io/cluster-api-machine-role: {{ item.1 }}
        machine.openshift.io/cluster-api-machine-type: {{ item.1 }}
        machine.openshift.io/cluster-api-machineset:  {{ infraID }}-{{ item.1 }}-{{ item.0 }}-{{ suffix }} 
    spec:
      metadata: 
        labels:
          node-role.kubernetes.io/{{ item.1 }}: "" 
      providerSpec:
        value:
          ami:
            id: {{ ami }}
          apiVersion: awsproviderconfig.openshift.io/v1beta1
          blockDevices:
          - ebs:
              encrypted: true
              iops: 0
              kmsKey:
                arn: ""
              volumeSize: 120
              volumeType: gp2
          credentialsSecret:
            name: aws-cloud-credentials
          deviceIndex: 0
          iamInstanceProfile:
            id: {{ infraID }}-worker-profile
          instanceType: m5.large
          kind: AWSMachineProviderConfig
          placement:
            availabilityZone: {{ item.0 }}
            region: {{ region }}
          securityGroups:
          - filters:
            - name: tag:Name
              values:
              - {{ infraID }}-worker-sg
          subnet:
            filters:
            - name: tag:Name
              values:
              - {{ infraID }}-private-{{ item.0 }}
          tags:
          - name: kubernetes.io/cluster/{{ infraID }}
            value: owned
          userDataSecret:
            name: worker-user-data
